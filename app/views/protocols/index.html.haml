#main
  .show_all
    %h2 Wszystkie obsługiwane protokoły
    -@protocols.each do |@protocol|
      .protocol
        %p.data
          %b Nazwa protokołu: 
          = @protocol.name
          %br
          %b kod walidacyjny: 
          = @protocol.valid_exp
          %br
          %b liczba zaliczonych testów:
          = passed_tests
          = "/"
          = @protocol.challenges.count
        %p.opcions
          =link_to 'Pokaż szczegóły', @protocol
          = link_to 'Edytuj', edit_protocol_path(@protocol)
          = link_to 'Usuń', @protocol, :confirm => 'Jesieś pewien?', :method => :delete
    = link_to 'Nowy protokół', new_protocol_path
