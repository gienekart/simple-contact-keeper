-@person.contacts.each do |contact|
  .contact
    %p.data
      Dane: 
      = contact.data
      = link_to 'Edytuj', edit_person_contact_path(@person, contact)
      = link_to 'Usuń', person_contact_path(@person, contact), :confirm => 'Jesieś pewien?', :method => :delete
%p.new_data
  = link_to 'Nowe dane kontaktowe', new_person_contact_url(@person)
